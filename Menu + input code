		OnOff of (Sensors proximity) = false 
		ShowOnHud of (Sensors proximity) = true 
	} 
	Else 
	{ 
		ShowOnHud of (Sensors proximity) = false 
		OnOff of (Sensors proximity) = true 
	} 
} 
