void WriteText(string textchoice, bool tf, string txtname)   
{   
	IMyTextPanel txt = GridTerminalSystem.GetBlockWithName(txtname) as IMyTextPanel;  
	txt.WritePrivateText(textchoice + "\n", tf);  
}  
